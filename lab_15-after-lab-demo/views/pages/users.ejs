<!DOCTYPE html>
<html>

<header>
  <%- include('../partials/head')%>
</header>


<body class="container">
    <header>
      <%- include('../partials/header')%>
    </header>

  <main>
    <div class="jumbotron">


      <h1> Hello <%= user.name.first %> </h1>
      <p> <%= user.email %> </p>
      <img src="<%= user.picture.large %>" />
      <!--page to display all the users-->
      <h2>All Students</h2>

          <ul>
            <!-- for each user-->
            <% users.forEach(function(user) { %>
              <li>
                <!-- create a link which directs to our /profile route and provides the username for tha user-->
                <!-- display the users title, first and last name as the link text -->
                <img src="" />
                <a href="/profile?username=<%= user.login.username %>"> <img src="<%=user.picture.thumbnail %> " /> <%= user.name.title+" "+user.name.first+" "+ user.name.last %> </a>
              </li>
            <% }); %>
          </ul>


    </div>
  </main>


  <footer>
    <%- include('../partials/footer')%>
  </footer>

</body>

</html>
